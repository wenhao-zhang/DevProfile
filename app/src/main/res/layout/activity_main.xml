<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/banner"
            app:layout_constraintStart_toEndOf="@+id/logo"
            android:layout_marginStart="12dp"
            android:text="@string/devslopes"
            android:id="@+id/devslopesText"
            android:layout_marginTop="12dp"
            android:textSize="24sp"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/banner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            android:layout_marginTop="116dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"/>

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/camerabutton"
            android:id="@+id/camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/favorite"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@+id/favorite"
            app:layout_constraintBottom_toBottomOf="@+id/favorite"
            tools:ignore="ContentDescription"/>

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/favorite"
            app:layout_constraintStart_toEndOf="@+id/camera"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/toolbox"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            app:layout_constraintTop_toTopOf="@+id/toolbox"
            app:layout_constraintBottom_toBottomOf="@+id/toolbox"
            tools:ignore="ContentDescription"
            app:layout_constraintVertical_bias="1.0"/>

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/toolbox"
            app:layout_constraintStart_toEndOf="@+id/favorite"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            tools:ignore="ContentDescription"/>

</android.support.constraint.ConstraintLayout>